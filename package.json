{
  "name": "react-trw-countdown",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:pwa": "npm run build && npm run generate-icons && npm run copy-pwa-assets",
    "generate-icons": "node scripts/generate-icons.js",
    "copy-pwa-assets": "cp -r public/icons dist/ && cp public/manifest.json dist/ && cp public/sw.js dist/",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "vercel-build": "npm run build:pwa"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.15",
    "date-fns": "^4.1.0",
    "firebase": "^12.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
